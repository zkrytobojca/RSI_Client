<Window x:Class="RSI_Client.AuthorListPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSI_Client"
        mc:Ignorable="d"
        Title="Add Author" ResizeMode="NoResize" Height="400" Width="400" FontSize="20">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.ColumnSpan="2" Grid.Row="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">Select author to add</Label>
        <ListBox Name="ListBoxAddedAuthorList" Grid.ColumnSpan="2" Grid.Row="1" DisplayMemberPath="DisplayAuthor">
            
        </ListBox>
        <Button Grid.Row="2" Grid.Column="0" Margin="5,5,5,5" Click="PopupAccept">OK</Button>
        <Button Grid.Row="2" Grid.Column="1" Margin="5,5,5,5" Click="PopupCancel">Cancel</Button>
    </Grid>
</Window>
